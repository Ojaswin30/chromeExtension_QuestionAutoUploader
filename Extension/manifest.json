{
    "manifest_version": 3,
    "name": "LeetCode Solution Uploader",
    "version": "1.0",
    "description": "Auto-upload LeetCode solutions with ChatGPT code reviews",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["https://leetcode.com/*", "https://api.github.com/*", "http://localhost:11434/*"],
    "externally_connectable": {
        "matches": ["http://localhost:*/*"]
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "settings.html"
}